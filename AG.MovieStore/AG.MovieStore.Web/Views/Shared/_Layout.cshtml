<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="\node_modules\bootstrap\dist\css\bootstrap.min.css" rel="stylesheet" />
    <link href="\node_modules\bootstrap\dist\js\bootstrap.bundle.min.js" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Movie Store</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated == false)
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-action="SignIn" asp-controller="User">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Create" asp-controller="User">Kayıt Ol</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="SignOut" asp-controller="User">Çıkış Yap</a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Member"))
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-action="Index" asp-controller="Member">Filmleri Göster</a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-action="Index" asp-controller="Admin">Filmleri Göster</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-action="Create" asp-controller="Admin">Film Ekle</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div>
        @RenderBody()
    </div>
</body>
</html>
