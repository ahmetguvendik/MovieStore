@model SignInUserModel

<form asp-action="SignIn" asp-controller="User" method="post">

    <div>
        <label>Kullanıcı Adınızı Giriniz:</label>
        <input type="text" asp-for="@Model.UserName"/>
    </div>
 
    <div>
        <label>Şifrenizi Giriniz:</label>
        <input type="password" asp-for="@Model.Password"/>
    </div>
   
    <div>
        @ViewBag.ErrorMessage
    </div>

    
    <div asp-validation-summary="ModelOnly"></div>

    <div>
            <button>Giriş Yap</button>    
    </div>
</form>